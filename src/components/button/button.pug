mixin button({href, title, theme, long, type})
  - 
    let classArray = []

    if (theme) classArray.push("button_theme-filled") 
      else classArray.push("button_theme-bordered")

    if (long) classArray.push("button_size-long") 
      else classArray.push("button_size-short")

  if href
    a.button(class=classArray href=href)
      span( class = theme ? "button_color-white" 
      : "button__color-purple")=title
      if long
        span.button__arrow 
  else 
    button.button(class=classArray type=type)
      span( class = theme ? "button_color-white" 
      : "button_color-purple")=title
      if long
        span.button__arrow 