include ../button/button

mixin nav({items, auth, account})
  nav.nav
    ul.nav__list
      if items
        each item in items
          - const { link, title, active } = item
          li.nav__item(
            class = active ? "nav__item_active" : ""
          )
            a.nav__link(href=link || "./index.html")= title
      if auth 
        each item in auth
          li.nav__item
            +button(item)
      if account
        li.nav__acc
          a.nav__link(href=account.href || "./index.html")=account.name
        