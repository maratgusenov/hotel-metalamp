include ../button/button

mixin nav({columns, rows, auth, account})
  nav.nav
    ul.nav__list(class=columns ? "nav__list_start" : "nav__list_center")
      
      if rows
        each row in rows
          - const { href, item, active } = row
          li.nav__item(class = active ? "nav__item_active" : "")
            a.nav__link(href=href || "./index.html")= item

      if columns
        each column in columns
          - const { title, list } = column
          li.nav__item
            ul.nav__columns
              li.nav__item
                if title
                span.nav__title= title
              each link in list 
                - const { href, item, text } = link
                if href
                  li.nav__item
                    a.nav__link(href=href || "./index.html")= item
                else 
                  li.nav__item 
                    div.nav__text=text

      if auth 
        each button in auth
          li.nav__item
            +button(button)

      if account
        li.nav__acc
          a.nav__link(href=account.href || "./index.html")=account.name
        